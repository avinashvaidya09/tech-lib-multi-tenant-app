{
  "routes": [
    {
      "source": "^/-/cds/.*",
      "destination": "mtx-api",
      "authenticationType": "none"
    },
    {
      "source": "^/$",
      "target": "/index.html",
      "localDir": "resources/tech-library",
      "authenticationType": "xsuaa"
    },
    {
      "source": "^/tech-library/(.*)$",
      "target": "$1",
      "localDir": "resources/tech-library",
      "authenticationType": "xsuaa"
    },
    {
      "source": "^/odata/(.*)$",
      "target": "/odata/$1",
      "destination": "srv-api",
      "csrfProtection": true,
      "authenticationType": "xsuaa"
    },
    {
      "source": "^/service/(.*)$",
      "target": "/service/$1",
      "destination": "srv-api",
      "csrfProtection": true,
      "authenticationType": "xsuaa"
    }
  ]
}
