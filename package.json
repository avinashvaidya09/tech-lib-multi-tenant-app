{
  "name": "tech-lib-multi-tenant-app",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@cap-js/postgres": "^2",
    "@sap-cloud-sdk/http-client": "^4.4.0",
    "@sap-cloud-sdk/util": "^4.4.0",
    "@sap/cds": "^9",
    "@sap/cds-mtxs": "^3",
    "@sap/low-code-event-handler": "^1.2.5",
    "@sap/xsenv": "^3.3.2",
    "@sap/xssec": "^4",
    "express": "^4",
    "hdb": "^2.26.4",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.16.3"
  },
  "scripts": {
    "start": "cds-serve",
    "start-local": "npm run generate-entry-point && npm run cds-watch",
    "generate-entry-point": "dev-cap-tools gen-entrypoint",
    "cds-watch": "cds watch --open",
    "watch-tech-library": "cds watch --open ns.techlibrary/index.html?sap-ui-xx-viewCache=false --livereload false",
    "build:ui": "npm run build --workspace=tech-library",
    "copy:ui": "rm -rf app/router/resources/tech-library && mkdir -p app/router/resources/tech-library && cp -R app/tech-library/dist/. app/router/resources/tech-library/",
    "build:mtar:prep": "npm run build:ui && npm run copy:ui"
  },
  "private": true,
  "cds": {
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "xsuaa",
        "multitenancy": true
      },
      "auth": {
        "[development]": {
          "kind": "mocked",
          "users": {
            "yves": {
              "scopes": [
                "internal-user"
                
              ] 
            },
            "bob": {
              "tenant": "t1",
              "scopes": [
                "libraryuser",
                "libraryadminuser"
              ] 
            },
            "john": {
              "tenant": "t2",
              "scopes": [
                "libraryuser",
                "libraryadminuser"
              ] 
            }
          }
        },
        "[production]": {
            "kind": "xsuaa"
          }
        },
        "[with-mtx]": {
          "multitenancy": true
        }
      },
      "profile": "with-mtx-sidecar"
    },
    "lcap": true,
    "workspaces": [
      "app/*"
    ],
    "sapux": [
      "app/tech-library"
    ]
  }